---
import Layout from "../layouts/Layout.astro";
import { Hero } from "../components/Hero.jsx";
import { Navbar } from "../components/Navbar.jsx";
import { Features1 } from "../components/Features1.jsx";
import { Features2 } from "../components/Features2.jsx";
import { Testimonials } from "../components/Testimonials.jsx";
import { FeaturesDiagonal } from "../components/FeaturesDiagonal.jsx";
import { FAQ } from "../components/FAQ.jsx";
import { Pricing } from "../components/Pricing";
import { Brands } from "../components/Brands.jsx";
import { Divider } from "../components/Divider";
import { Footer } from "../components/Footer.jsx";
import { ScrollUpButton } from "../components/ScrollUpButton";
import "../styles/Theme.css";
import "../styles/Diagonals.css";
import i18next, { t, changeLanguage } from "i18next";
import { LanguageSelector } from "astro-i18next/components";

changeLanguage("es");

const lang = i18next.language;
const title = lang === "es" ? "Qantto - Cotizador de servicios online" : "Qantto - Online services quote";
---

<Layout title={title}>
  <Navbar client:load />
  <LanguageSelector
    languageMapping={{
      es: "ES",
      en: "EN",
    }}
    class="z-50 fixed right-[75px] lg:right-14 top-7 bg-transparent focus:bg-customBg text-white outline-none" />
  <Hero client:load />
  <Features1 client:load />
  <Divider />
  <Features2 client:load />
  <Testimonials client:load />
  <FeaturesDiagonal client:load />
  <Pricing client:load />
  <Brands client:load />
  <FAQ client:load />
  <Footer client:load />
  <ScrollUpButton client:load />
</Layout>

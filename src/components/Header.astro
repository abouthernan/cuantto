---
import 'animate.css'
import logo from '../assets/img/logo-claro.svg'
import Nav from './Nav.astro'
---

<header class="header animate__animated animate__fadeIn">
  <div class="content">
    <a class="logo" href="/">
      <img
        class="logo__img"
        height={30}
        src={logo}
        alt="puede ser una imagen del logo de quantto" />
    </a>

    <Nav />
  </div>
</header>

<style>
.header {
  background-color: var(--dark-blue);
}

.content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2rem 1rem;
}

.logo {
  width: 10rem;
  height: 3rem;
}

.logo__img {
  aspect-ratio: 16/9;
  width: 100%;
  height: 100%;
  object-fit: contain;
}

@media (min-width: 768px) {
  .content {
    max-width: 120rem;
    margin: 0 auto;
  }

  .logo {
    width: 18rem;
    height: 5rem;
  }
}
</style>

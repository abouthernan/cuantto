---
interface Props {
  title: string;
}

const { title } = Astro.props

import ShadowBg from "../components/ShadowBg.astro";
import i18next from "i18next";
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import { HeadHrefLangs } from "astro-i18next/components";
import Metatags from "../components/Metatags.astro";
---

<!doctype html>
<html lang={i18next.language} class="overflow-x-hidden scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon-light.svg" media="(prefers-color-scheme: light)" />
		<link rel="icon" type="image/svg+xml" href="/favicon-dark.svg" media="(prefers-color-scheme: dark)" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<GoogleFontsOptimizer
			url="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;700&display=swap"
		/>
		<HeadHrefLangs />
    <Metatags />
	</head>
	<body class="bg-qBg font-inter overflow-x-hidden">
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-55XC3FQ4"
    height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
		<ShadowBg />
		<slot />
	</body>
</html>

<style is:global>

  /* nav */
  :has(#toggleNav.open) .nav-mobil {
    @apply top-[88px] translate-y-0;
  }

  .balance {
    text-wrap: balance;
  }

  .word-wrap {
    word-wrap: break-word;
  }

  .border-r-dashed::after {
    position: absolute;
    content: "";
    border-bottom: 1px dashed #6ef96e;
    width: 100%;
    height: 1px;
    top: 40px;
    right: -50%;
    z-index: -1;
  }

  .direction-reverse {
    animation-direction: reverse;
  }

  .nav-button {
    @apply space-x-0;
  }

  .nav-button a {
    @apply pr-8;
  }

  .nav-button a:last-child {
    @apply bg-qGreen text-qBlack px-4;
  }

  .nav-button a:last-child {
    @apply border-none;
  }

  .nav-button a:last-child:hover {
    @apply bg-qGreen/80 text-qBlack;
  }

  @media (max-width: 768px) {
    .nav-button a {
      @apply border-qGreen text-qGreen;
    }
  }

  /* banner */
  .circuit::before,
  .circuit-mask {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    width: 1024px;
    height: 100%;
    background-image: url("/images/circuit.svg");
    background-repeat: no-repeat;
    background-position: center;
    margin: 0 auto;
    overflow: hidden;
  }

  .circuit-mask {
    -webkit-mask: url("/images/circuit.svg");
    mask: url("/images/circuit.svg");
    -webkit-mask-repeat: no-repeat;
    mask-repeat: no-repeat;
    -webkit-mask-position: center;
    mask-position: center;
    display: grid;
    place-items: center;
  }

  .circuit-mask::before {
    content: "";
    position: absolute;
    border: 3px solid #6ef96e;
    border-radius: 50%;
    width: 100px;
    height: 100px;
    animation: onda 8s 2s infinite;
  }

  @keyframes onda {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(8);
    }
    100% {
      transform: scale(8);
    }
  }
</style>
